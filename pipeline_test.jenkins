pipeline {
   agent {docker { image 'python:3' }

   stages {
      stage("Venv") {
        steps {
		  sh 'python --version'
          sh 'venv/Scripts/activate'
		  sh 'pip install -r requirements.txt'
		  echo 'venv activated'
        }
      }
      stage('Go') {
        steps{      
         sh 'robot Tests/tests.robot'
        }
		}
  }
} 